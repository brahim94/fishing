<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Data records go here -->
    <record id="fleet_view_form" model="ir.ui.view">
        <field name="name">Fishing Form</field>
        <field name="model">fishing.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group col="2">
                    <group string="Générale">
                        <field name="name" />
                        <field name="Number"/>
                        <field name="description" />  
                    </group>
                  </sheet>
              </form>
        </field>
    </record>

    <record id="fishing_list_view_tree" model="ir.ui.view">
        <field name="name">fishing.list.tree</field>
        <field name="model">fishing.list</field>
        <field name="arch" type="xml">
            <tree>
            <field name="name"/>
            <field name="Number"/>
            <field name="description"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="fishing_list_action">
    <field name="name">Fishing</field>
    <field name="res_model">fishing.list</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
            <p class="oe_view_nocontent_smiling_face"> créer votre première liste fishing
                </p>
            </field>
        </record>"

<menuitem name="Fishing" id="menu_root" sequence="115" groups="base.group_user" web_icon="flotte,static/description/fishing.png"/>
